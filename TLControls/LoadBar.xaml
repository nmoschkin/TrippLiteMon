<UserControl
    x:Class="TrippLite.LoadBar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:TrippLite="clr-namespace:TrippLite"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="30"
    d:DesignWidth="100"
    mc:Ignorable="d">


    <Grid>
        <Canvas
            x:Name="BarsArea"
            Margin="4,4,4,4"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch" />

        <Canvas
            x:Name="DrawingArea"
            Margin="4,4,4,4"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch">
            <Polygon
                x:Name="BackingBar"
                Fill="{DynamicResource TrippLiteLcdType}"
                Opacity="0">
                <!--  Points="{Binding ElementName=LoadBar, Path=OutlinePoints}"  -->

                <Polygon.Effect>
                    <DropShadowEffect
                        BlurRadius="2"
                        Opacity="{Binding ElementName=LoadBar, Path=EffectLevel}"
                        ShadowDepth="2"
                        Color="{DynamicResource TrippLiteDimGrayColor}" />
                </Polygon.Effect>

            </Polygon>
        </Canvas>
    </Grid>

</UserControl>
