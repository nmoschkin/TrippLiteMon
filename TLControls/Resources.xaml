    <DataTemplate x:Key="NormalItemTemplate">
        <Grid
            x:Name="ContentGrid"
            Width="110"
            Height="Auto"
            Margin="0,0,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Background="{DynamicResource TrippLiteLcd}"
            ClipToBounds="True"
            Focusable="False"
            Opacity="1">

            <Grid.ColumnDefinitions>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition />
            </Grid.RowDefinitions>

            <Rectangle
                x:Name="HighlighterStroke"
                Grid.Row="0"
                Grid.Column="0"
                Width="{Binding}"
                Height="{Binding}"
                Panel.ZIndex="0"
                Fill="Transparent"
                Opacity="1"
                Stroke="{DynamicResource TrippLiteBlue}"
                StrokeThickness="1" />

            <Rectangle
                x:Name="HighlighterFill"
                Grid.Row="0"
                Grid.Column="0"
                Width="{Binding}"
                Height="{Binding}"
                Panel.ZIndex="0"
                Fill="{DynamicResource TrippLiteBlue}"
                Opacity="0.2"
                StrokeThickness="0" />

            <StackPanel
                x:Name="Content"
                Grid.Row="0"
                Grid.Column="0"
                Width="{Binding}"
                Height="{Binding}"
                Margin="4,3,4,3"
                Panel.ZIndex="1">

                <StackPanel>
                    <TextBlock
                        x:Name="Header"
                        Margin="2,2,2,2"
                        HorizontalAlignment="Left"
                        Style="{DynamicResource NormalPropertyHeadline}"
                        Text="{Binding Header, Mode=OneTime}" />

                </StackPanel>
                <StackPanel>
                    <TextBlock
                        x:Name="Reading"
                        Grid.Row="1"
                        Margin="2,2,2,2"
                        HorizontalAlignment="Left"
                        Style="{DynamicResource NormalProperty}"
                        Text="{Binding DisplayValue, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>
            </StackPanel>

        </Grid>
    </DataTemplate>

